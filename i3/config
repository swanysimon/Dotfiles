# i3/config
# Simon Swanson
# I take no responsibility for you harming yourself or your computer trying to use this configuration file

####
#### config variables
####

# Alt key as mod
set $mod Mod1

# set colors to my terminal colors
set $BLACK #2b2b2b
set $BRIGHT_BLACK #555555
set $RED #c93b48
set $BRIGHT_RED #ff6b68
set $GREEN #6a8759
set $BRIGHT_GREEN #a8c023
set $YELLOW #cc7832
set $BRIGHT_YELLOW #ffc66d
set $BLUE #5394ec
set $BRIGHT_BLUE #7eaef1
set $MAGENTA #9876aa
set $BRIGHT_MAGENTA #ae8abe
set $CYAN #bbb529
set $BRIGHT_CYAN #d6bf55
set $WHITE #a9b7c6
set $BRIGHT_WHITE #bbbbbb

####
#### session
####

font pango:San Francisco Display 10

# prevent IntelliJ from unselecting the dialogs while I'm typing
focus_follows_mouse no

# restart
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# lock screen
bindsym $mod+Control+Delete exec i3lock -n -c 2b2b2b

####
#### workspaces
####

# assign workspaces
bindsym $mod+1 workspace number 1 browser
bindsym $mod+2 workspace number 2 intellij
bindsym $mod+3 workspace number 3 eclipse
bindsym $mod+4 workspace number 4 misc
bindsym $mod+5 workspace number 5 misc
bindsym $mod+6 workspace number 6 terminal
bindsym $mod+7 workspace number 7 client
bindsym $mod+8 workspace number 8 misc
bindsym $mod+9 workspace number 9 misc
bindsym $mod+0 workspace number 0 misc

# move to workspace
bindsym $mod+Shift+1 move container to workspace number 1 browser; workspace number 1 browser
bindsym $mod+Shift+2 move container to workspace number 2 intellij; workspace number 2 intellij
bindsym $mod+Shift+3 move container to workspace number 3 eclipse; workspace number 3 eclipse
bindsym $mod+Shift+4 move container to workspace number 4 misc; workspace number 4 misc
bindsym $mod+Shift+5 move container to workspace number 5 misc; workspace number 5 misc
bindsym $mod+Shift+6 move container to workspace number 6 terminal; workspace number 6 terminal
bindsym $mod+Shift+7 move container to workspace number 7 client; workspace number 7 client
bindsym $mod+Shift+8 move container to workspace number 8 misc; workspace number 8 misc
bindsym $mod+Shift+9 move container to workspace number 9 misc; workspace number 9 misc
bindsym $mod+Shift+0 move container to workspace number 0 misc; workspace number 0 misc

# 1-5 on the left, 6-0 on the right
workspace 1 output DisplayPort-0
workspace 2 output DisplayPort-0
workspace 3 output DisplayPort-0
workspace 4 output DisplayPort-0
workspace 5 output DisplayPort-0
workspace 6 output DisplayPort-1
workspace 7 output DisplayPort-1
workspace 8 output DisplayPort-1
workspace 9 output DisplayPort-1
workspace 0 output DisplayPort-1

# change workspace layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# always focus the brand new window
for_window [class=".*"] focus

# specify where windows should open
assign [class="Firefox"] 1 browser
assign [class="Gnome-terminal"] 6 terminal
assign [class="jetbrains-idea-ce"] 2 intellij
assign [class="Eclipse"] 3 eclipse
assign [class="Palantir Workspace"] 7 client

####
#### shortcuts
####

# application launcher settings
bindsym $mod+space exec --no-startup-id rofi -modi drun -show drun
bindsym $mod+Shift+space exec --no-startup-id rofi -combi-modi window,drun,ssh -modi combi -show combi
bindsym $mod+Tab exec --no-startup-id rofi -show window

# application shortcuts
bindsym $mod+Shift+t exec --no-startup-id gnome-terminal

####
#### windows
####

# kill focused window
bindsym $mod+q kill

# vim movement patterns
set $up k
set $down j
set $left h
set $right l

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# move windows
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# resizing windows
bindsym $mod+r mode "resize"
mode "resize" {
        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left resize shrink width 10 px or 10 ppt
        bindsym $down resize grow height 10 px or 10 ppt
        bindsym $up resize shrink height 10 px or 10 ppt
        bindsym $right resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# fullscreen mode
bindsym $mod+f fullscreen toggle

# floating windows
floating_modifier $mod
bindsym $mod+Shift+f floating toggle, move absolute position 0 0, resize set 2880 2560

####
#### extra configs
####

# volume controls
bindsym XF86AudioRaiseVolume exec amixer -q set Headphone 5%+ unmute
bindsym XF86AudioLowerVolume exec amixer -q set Headphone 5%- unmute
bindsym XF86AudioMute exec amixer -q set Headphone toggle

####
#### status bar
####

bar {
    font pango:San Francisco Display 10
    position top
    status_command i3status
    tray_output primary
    colors {
        background $BLACK
        statusline $WHITE
        separator $BRIGHT_WHITE
    }
}

# start with firefox and a terminal running
exec --no-startup-id firefox
exec --no-startup-id gnome-terminal

