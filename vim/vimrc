set nocompatible
set history=1000

let mapleader=","
let maplocalleader="'"

set hidden

set comments=
set include=
set nrformats-=octal
set path-=/usr/include/

if has("unnamedplus")
  set clipboard^=unnamedplus
elseif has("clipboard")
  set clipboard^=unnamed
endif

if !exists('$LANG') && &encoding ==# "latin1"
  set encoding=utf-8
endif

if has("mouse")
  set mouse=a
endif

" The .caches directory is excluded from git
set directory^=$HOME/.vim/.caches/swapfiles//
set undodir^=$HOME/.vim/.caches/undo//
set undofile
