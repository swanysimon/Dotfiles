#!/usr/bin/env bash

set -euo pipefail

cd "$CODEDIR"
while read REPO; do
    echo "Working on $REPO"
    if [[ -d "$REPO" ]]; then
        (cd "$REPO" && gh repo sync --force || true)
    else
        gh repo clone "$REPO" "$REPO"
    fi
done < <(gh repo list "$1" --limit 10000 --source --json nameWithOwner --jq '.[] | .nameWithOwner')
