[alias]
  # general aliasing
  d = difftool
  recursive-update = submodule update --init --recursive --remote --merge

  # commit-level aliases
  addit = !git add -A && git commit
  addmend = !git add -A && git commit --amend
  addmendnoedit = !git add -A && git commit --amend --no-edit
  amend = commit --amend
  co = commit

  # rebase aliases
  rabort = rebase --abort
  rcontinue = rebase --continue
  rinteractive = rebase --interactive
  rskip = rebase --skip

  # log aliases
  lg = log --color --graph --pretty=format:'%C(red)%h%Creset - %C(cyan)%d%Creset %s %C(green)(%cr)%Creset <%an>'
  verboselog = log --color --stat --graph --pretty=fuller

[branch]
  autosetupmerge = always
  autosetuprebase = always
  rebase = true
[color]
  ui = true
[core]
  editor = nvim
  ignorecase = true
  pager = less -+F -+X
[diff]
  prompt = false
  tool = vimdiff
[difftool]
  prompt = false
[difftool "vimdiff"]
  path = nvim
[fetch]
  parallel = 0
  recurseSubmodules = true
[merge]
  conflictstyle = diff3
  tool = vimdiff
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  path = nvim
[pager]
  branch = false
[submodule]
  fetchJobs = 0
[user]
  email = nomiswanson@gmail.com
  name = Simon Swanson
