# i3/config
# Simon Swanson
# I take no responsibility for you harming yourself or your computer trying to use this configuration file

####
#### config variables
####

# Alt key as mod
set $mod Mod1

# set colors to my terminal colors
set $BLACK #2b2b2b
set $BRIGHT_BLACK #555555
set $RED #c93b48
set $BRIGHT_RED #ff6b68
set $GREEN #6a8759
set $BRIGHT_GREEN #a8c023
set $YELLOW #cc7832
set $BRIGHT_YELLOW #ffc66d
set $BLUE #5394ec
set $BRIGHT_BLUE #7eaef1
set $MAGENTA #9876aa
set $BRIGHT_MAGENTA #ae8abe
set $CYAN #bbb529
set $BRIGHT_CYAN #d6bf55
set $WHITE #a9b7c6
set $BRIGHT_WHITE #bbbbbb

####
#### session
####

font pango:San Francisco Display 10

# prevent IntelliJ from unselecting the dialogs while I'm typing
focus_follows_mouse no

# restart
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# lock screen
bindsym $mod+Control+Delete exec dm-tool lock

####
#### workspaces
####

# assign workspaces
bindsym $mod+1 workspace number 1 alpha
bindsym $mod+2 workspace number 2 bravo
bindsym $mod+3 workspace number 3 charlie
bindsym $mod+4 workspace number 4 delta
bindsym $mod+5 workspace number 5 echo
bindsym $mod+6 workspace number 6 foxtrot
bindsym $mod+7 workspace number 7 golf
bindsym $mod+8 workspace number 8 hotel
bindsym $mod+9 workspace number 9 india
bindsym $mod+0 workspace number 0 juliet

# move to workspace
bindsym $mod+Shift+1 move container to workspace number 1 alpha; workspace number 1 alpha
bindsym $mod+Shift+2 move container to workspace number 2 bravo; workspace number 2 bravo
bindsym $mod+Shift+3 move container to workspace number 3 charlie; workspace number 3 charlie
bindsym $mod+Shift+4 move container to workspace number 4 delta; workspace number 4 delta
bindsym $mod+Shift+5 move container to workspace number 5 echo; workspace number 5 echo
bindsym $mod+Shift+6 move container to workspace number 6 foxtrot; workspace number 6 foxtrot
bindsym $mod+Shift+7 move container to workspace number 7 golf; workspace number 7 golf
bindsym $mod+Shift+8 move container to workspace number 8 hotel; workspace number 8 hotel
bindsym $mod+Shift+9 move container to workspace number 9 india; workspace number 9 india
bindsym $mod+Shift+0 move container to workspace number 0 juliet; workspace number 0 juliet

# editor workspaces on the left, terminal in the middle, everything else on the right
workspace 1 output DisplayPort-0
workspace 2 output DisplayPort-0
workspace 3 output DisplayPort-0
workspace 4 output DisplayPort-0
workspace 5 output DisplayPort-0
workspace 6 output DisplayPort-1
workspace 7 output DisplayPort-1
workspace 8 output DisplayPort-1
workspace 9 output DisplayPort-1
workspace 0 output DisplayPort-1

# workspaces stack by default
workspace_layout stacking

# change workspace layout
bindsym $mod+s layout stacking
bindsym $mod+w layout toggle split
bindsym $mod+e split horizontal

# always focus the brand new window
for_window [class=".*"] focus

####
#### shortcuts
####

# application launcher settings
bindsym $mod+space exec --no-startup-id rofi -modi drun -show drun
bindsym $mod+Shift+space exec --no-startup-id rofi -combi-modi window,drun,ssh -modi combi -show combi
bindsym $mod+Tab exec --no-startup-id rofi -show window

# application shortcuts
bindsym $mod+Shift+t exec --no-startup-id gnome-terminal

####
#### windows
####

# kill focused window
bindsym $mod+q kill

# vim movement patterns
set $up k
set $down j
set $left h
set $right l

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# move windows
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# resizing windows
bindsym $mod+r mode "resize"
mode "resize" {
        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left resize shrink width 10 px or 10 ppt
        bindsym $down resize grow height 10 px or 10 ppt
        bindsym $up resize shrink height 10 px or 10 ppt
        bindsym $right resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# fullscreen mode
bindsym $mod+f fullscreen toggle

####
#### extra configs
####

# volume controls
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%-

####
#### status bar
####

bar {
    font pango:San Francisco Display 10
    position top
    status_command i3status
    tray_output primary
    colors {
        background $BLACK
        statusline $WHITE
        separator $BRIGHT_WHITE
    }
}

# start with firefox and a terminal running
exec --no-startup-id gnome-terminal

