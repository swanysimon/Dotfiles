# i3/config
# Simon Swanson
# I take no responsibility for you harming yourself or your computer trying to use this configuration file

####
#### config variables
####

# needed for i3-gaps
hide_edge_borders both
for_window [class="^.*"] border pixel 0
gaps inner 20

# Alt key as mod
set $mod Mod1

# set colors to my Xresources colors
set_from_resource $BLACK color0 #2b2b2b
set_from_resource $RED color1 #c93b48
set_from_resource $GREEN color2 #6a8759
set_from_resource $YELLOW color3 #cc7832
set_from_resource $BLUE color4 #5394ec
set_from_resource $MAGENTA color5 #9876aa
set_from_resource $CYAN color6 #bbb529
set_from_resource $WHITE color7 #a9b7c6
set_from_resource $BRIGHT_BLACK color8 #555555
set_from_resource $BRIGHT_RED color9 #ff6b68
set_from_resource $BRIGHT_GREEN color10 #a8c023
set_from_resource $BRIGHT_YELLOW color11 #ffc66d
set_from_resource $BRIGHT_BLUE color12 #7eaef1
set_from_resource $BRIGHT_MAGENTA color13 #ae8abe
set_from_resource $BRIGHT_CYAN color14 #d6bf55
set_from_resource $BRIGHT_WHITE color15 #bbbbbb

####
#### session
####

font pango:San Francisco Display 10

# prevent IntelliJ from unselecting the dialogs while I'm typing
focus_follows_mouse no

# reload config
bindsym $mod+Shift+c reload

# lock screen
bindsym $mod+Control+Delete exec dm-tool lock

####
#### workspaces
####

# move workspaces
bindsym $mod+Shift+y move workspace to output left
bindsym $mod+Shift+p move workspace to output right

# navigate workspaces
bindsym $mod+grave workspace back_and_forth
bindsym $mod+Shift+grave move container to workspace back_and_forth

# rename workspaces
bindsym $mod+Shift+r exec ~/.config/i3/rename_i3_workspace.sh
bindsym $mod+n exec ~/.config/i3/i3_create_workspace.sh "new workspace"

# change workspace layout
workspace_layout default
bindsym $mod+Shift+Control+h split horizontal
bindsym $mod+Shift+Control+v split vertical

# always focus the brand new window
for_window [class=".*"] focus

####
#### shortcuts
####

# application launcher settings
bindsym $mod+space exec --no-startup-id rofi -show drun
bindsym $mod+Tab exec --no-startup-id rofi -show Workspaces

# application settings
bindsym $mod+Shift+t exec --no-startup-id st

####
#### windows
####

# kill focused window
bindsym $mod+q kill

# vim movement patterns
set $up k
set $down j
set $left h
set $right l

# change focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# move windows
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+Shift+Left move container left
bindsym $mod+Shift+Down move container down
bindsym $mod+Shift+Up move container up
bindsym $mod+Shift+Right move container right

# resize windows
bindsym $mod+Shift+Control+y resize shrink width 1 px or 1 ppt
bindsym $mod+Shift+Control+u resize shrink height 1 px or 1 ppt
bindsym $mod+Shift+Control+i resize grow height 1 px or 1 ppt
bindsym $mod+Shift+Control+o resize grow width 1 px or 1 ppt

# fullscreen mode
bindsym $mod+f fullscreen toggle

####
#### extra configs
####

# volume controls
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%-
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+

####
#### status bar
####

bar {
    position top
    status_command i3status
    colors {
        background $BLACK
        statusline $WHITE
        separator $BRIGHT_WHITE
    }
}

# restore wallpaper on login
exec --no-startup-id nitrogen --restore

