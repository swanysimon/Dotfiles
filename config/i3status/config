# i3status/config
# Simon Swanson
# I take no responsibility for you harming yourself or your computer trying to use this configuation file

general {
    colors = true
    interval = 1
    output_format = i3bar
    separator = " | "
}

order += "volume master"
order += "cpu_usage"
order += "tztime local"

volume master {
    format = "Volume: %volume"
    format_muted = "Mute"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

cpu_usage {
    format = "CPU: %usage"
}

disk "/" {
    format = "%free"
}

disk "/media/code/" {
    format = "%free"
}

tztime local {
    format = "%I:%M:%S"
}

