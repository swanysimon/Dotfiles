[alias]
  # general aliasing
  gh-push = !git push origin --force-with-lease "$(git branch --show-current)"
  recursive-update = submodule update --init --recursive --remote --merge
  sync = !git pull && git push
  w = switch

  # commit-level aliases
  co = commit --verbose
  amend = co --amend
  addit = !git add -A && git co
  addmend = addit --amend
  addmendnoedit = addmend --no-edit
  checkpoint = addit -m checkpoint

  # rebase aliases
  rabort = rebase --abort
  rcontinue = rebase --continue
  rinteractive = rebase --interactive
  rskip = rebase --skip

  # log aliases
  lg = log --color --pretty=format:'%C(red)%h%Creset - %C(cyan)%d%Creset %s %C(green)(%cr)%Creset <%an>'
  verboselog = log --color --stat --pretty=fuller

[advice]
  skippedCherryPicks = false
[branch]
  autosetupmerge = always
  autosetuprebase = always
  rebase = true
[color]
  ui = true
[core]
  editor = nvim
  ignorecase = true
  pager = delta
[delta]
  decorations = true
  line-numbers = true
  side-by-side = true
  syntax-theme = gruvbox-dark
  whitespace-error-style = 22 reverse
[diff]
  colorMoved = true
[fetch]
  parallel = 0
  prune = true
  recurseSubmodules = true
[init]
  defaultBranch = main
[interactive]
  diffFilter = delta --color-only
[merge]
  conflictstyle = diff3
  tool = vimdiff
[mergetool]
  keepBackup = false
  path = nvim
  prompt = false
[mergetool "vimdiff"]
  # roughly equivalent to vimdiff3
  cmd = nvim -dc '$wincmd w | wincmd J' "$LOCAL" "$BASE" "$REMOTE" "$MERGED"
[pager]
  branch = false
[submodule]
  fetchJobs = 0
[user]
  email = git@simonswanson.xyz
  name = Simon Swanson
